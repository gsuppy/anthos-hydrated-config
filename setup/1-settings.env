export REPO_URL=https://github.com/cgrant/policy-repo



export PROJECT=$(gcloud config get-value project)
export PROJECT_ID=$(gcloud config get-value project)
gcloud config set project $PROJECT

 
export ISTIO_CONTROL=none
export CONTROL_CLUSTER=central



export WORK_DIR="${PWD}/tmp"
mkdir -p $WORK_DIR/bin
export PATH=$PATH:$WORK_DIR/bin:

echo "Path set"





#export REMOTE_CLUSTER_NAME_BASE="remote-$RANDOM"
export REMOTE_CLUSTER_NAME_BASE="remote-cluster"

# Make unique bucket for kops state store
export KOPS_STORE=gs://$PROJECT-kops-$REMOTE_CLUSTER_NAME_BASE

# Create remote cluster on GCE using kops 
export REMOTE_CLUSTER_NAME=$REMOTE_CLUSTER_NAME_BASE.k8s.local